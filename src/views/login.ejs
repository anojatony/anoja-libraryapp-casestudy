<!-- Form starts -->

<div class="container center-signn">
  
  <div class="row justify-content-center">
    <!-- <div class="col-md-4"> -->
    
<form action="/login/add" method="POST" class="frm" onsubmit="return validate();">
  <!-- <div class="form-container shadow p-3 bg-white rounded"> -->
    <h3>User Login</h3>

    <% if(success_msg!= '') { %>
      <div class="alert alert-danger"><%=success_msg %></div>
      <% } %> 

      <% if(error_msg != '') { %>
        <div class="alert alert-danger"><%=error_msg %> </div>
      <% } %> 
      <% if(error != '') { %>
        <div class="alert alert-danger"><%= error %> </div> 
      <% } %> 
       
      
    <div class="form-group">
      <label for="email">Email address</label>
      <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" required>
      <label for="email" id="error"></label>
    </div>
    <div class="form-group ">
      <label for="pwd">Password</label>
      <input type="password" class="form-control" id="pwd" name="password" required>
      <label for="password" id="pwderror"></label>
    </div>
    <div class="form-group form-check">
      <input type="checkbox" class="form-check-input" id="checkbox">
      <label class="form-check-label" for="exampleCheck1">Confirm</label>
    </div>
    <button type="submit" class="btn btn-block">Log In</button>
    <div class="text-center">
      <a href="/signup">Create an account</a>
    </div>
  </form>
<!-- </div> -->
</div>
